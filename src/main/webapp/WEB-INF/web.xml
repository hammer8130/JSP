<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>HelloWorld</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>appName</param-name>
    <param-value>HelloWorld</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>himedia</param-value>
  </context-param>
  <context-param>
    <param-name>dbPass</param-name>
    <param-value>himedia</param-value>
  </context-param>
  <error-page>
    <error-code>404</error-code>
    <location>/views/errors/error.404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/views/errors/errors.jsp</location>
  </error-page>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>himedia.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>LoggingFilter</filter-name>
    <filter-class>himedia.filter.LoggingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoggingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>MyFirstServlet</servlet-name>
    <servlet-class>himedia.HelloServlet</servlet-class>
    <init-param>
      <param-name>servletName</param-name>
      <param-value>HelloServlet</param-value>
    </init-param>
    <init-param>
      <param-name>description</param-name>
      <param-value>나의 첫 서블릿입니다.</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyFirstServlet</servlet-name>
    <url-pattern>/hs</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>HelloServlet2</display-name>
    <servlet-name>HelloServlet2</servlet-name>
    <servlet-class>himedia.HelloServlet2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloServlet2</servlet-name>
    <url-pattern>/HelloServlet2</url-pattern>
  </servlet-mapping>
</web-app>